<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/main_fragment_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First floor"
        app:layout_constraintBottom_toTopOf="@+id/search_fragment_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/search_fragment_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search fragment"
        app:layout_constraintTop_toBottomOf="@+id/main_fragment_btn" />

</android.support.constraint.ConstraintLayout>