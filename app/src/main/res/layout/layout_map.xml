<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    >

    <RadioGroup
        android:id="@+id/floor_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        >

        <RadioButton
            android:id="@+id/first_floor"
            android:layout_width="0dp"
            android:layout_height="@dimen/floor_btn_height"
            android:checked="true"
            android:text="1"
            style="@style/floor_radio_btn"
            />

        <RadioButton
            android:id="@+id/second_floor"
            android:layout_width="0dp"
            android:layout_height="@dimen/floor_btn_height"
            style="@style/floor_radio_btn"
            android:text="2"
            />
        <RadioButton
            android:id="@+id/third_floor"
            android:layout_width="0dp"
            android:layout_height="@dimen/floor_btn_height"
            style="@style/floor_radio_btn"
            android:text="3"
            />
        <RadioButton
            android:id="@+id/forth_floor"
            android:layout_width="0dp"
            android:layout_height="@dimen/floor_btn_height"
            style="@style/floor_radio_btn"
            android:text="4"
            />
        <RadioButton
            android:id="@+id/fifth_floor"
            android:layout_width="0dp"
            android:layout_height="@dimen/floor_btn_height"
            style="@style/floor_radio_btn"
            android:text="5"
            />
    </RadioGroup>

    <com.zapir.ariadne.ui.map.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/floor_btns" />

</android.support.constraint.ConstraintLayout>